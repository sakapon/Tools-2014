<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PortraitClip"
        x:Class="PortraitClip.MainWindow"
        Title="Portrait Clip" Height="600" Width="900" SnapsToDevicePixels="True" Topmost="True" AllowsTransparency="True" WindowStyle="None" Background="{Binding BackgroundBrush, Mode=OneWay}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="12"/>
    </WindowChrome.WindowChrome>
	<Window.DataContext>
		<local:MainViewModel/>
	</Window.DataContext>
	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
	</Window.Resources>
	<Border BorderBrush="{Binding BorderBrush, Mode=OneWay}" BorderThickness="2" Margin="5">
		<Grid>
			<Image Source="{Binding Portrait.ClipBitmap, Mode=OneWay}"/>
			<Button x:Name="CloseButton" Content="r" ToolTip="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,12,0" Padding="12,4" FontFamily="Marlett" FontSize="32" Background="#99DD3333" Foreground="White" BorderThickness="0" Visibility="{Binding ShowBorder, Converter={StaticResource BooleanToVisibilityConverter}}"/>
		</Grid>
	</Border>
</Window>
